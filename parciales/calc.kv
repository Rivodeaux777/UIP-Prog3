<Calc>:
    a: _a
    b: _b
    result: _result
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'top'
        ScreenManager:
            size_hint: 1, .9
            id: _screen_manager
            Screen:
                name: 'screen1'
                GridLayout:
                    cols:1
                    TextInput:
                        id: _a
                        font_size: 50
                        text: 'Numero'
                    TextInput:
                        id: _b
                        font_size: 50
                        text: 'Numero'
                    Label:
                        font_size: 50
                        id: _result
                AnchorLayout:
                    anchor_x: 'center'
                    anchor_y: 'bottom'
                    BoxLayout:
                        #cols:2
                        orientation: 'horizontal'
                        size_hint: 1,.1
                        Button:
                            text: 'Suma'
                            on_press: _result.text = str(int(_a.text) + int(_b.text))
                        Button:
                            text: 'Resta'
                            on_press: _result.text= str(int(_a.text) - int(_b.text))
                        Button:
                            text: 'Multiplica'
                            on_press: _result.text = str(int(_a.text) * int(_b.text)  )
                        Button:
                            text: 'Divide'
                            on_press: _result.text = str(int(_a.text) /  int(_b.text)  )


